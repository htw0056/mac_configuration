#!/bin/sh
#=============================================================================#
# 	htw0056's SSH setup script
#   Author: htw0056 (huangtw1995@outlook.com)
#=============================================================================#

#—————————————————————————————————————————————————————————————————————————————#
# Locate
dirname $0 | grep "^/" >/dev/null
if [ $? -eq 0 ]; then
  # Absolute path
  cd $(dirname $0);
else
  # Relative path
  cd $(dirname $(pwd)/$0);
fi

SRC_HOME=`pwd`;
#—————————————————————————————————————————————————————————————————————————————#

#—————————————————————————————————————————————————————————————————————————————#
# Copy config file
mkdir -p ~/.ssh && cp ${SRC_HOME}/config ~/.ssh/config;
echo "ssh done"
#—————————————————————————————————————————————————————————————————————————————#